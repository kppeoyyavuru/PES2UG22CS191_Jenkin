pipeline {
    agent any

    stages {
        stage('Clone repository') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[url: 'https://github.com/kppeoyyavuru/PES2UG22CS191_Jenkin.git']]
                ])
            }
        }

        stage('Build') {
            steps {
                build 'pes2ug22cs191-3'
                sh 'g++ main.cpp -o output'
            }
        }

        stage('Test') {
            steps {
                sh './output'
            }
        }

        stage('Deploy') {
            steps {
                echo 'deploy'
            }
        }
    }

    post {
        failure {
           echo 'error Pipeline failed'
    }
}
}